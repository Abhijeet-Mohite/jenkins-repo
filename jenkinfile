

pipeline {
    agent any

    stages {

        stage('Checkout') {
            steps {
                git 'https://github.com/Abhijeet-Mohite/jenkins-repo.git'
            }
        }

        stage('Deploy') {
            steps {
                sh '''
                sudo rm -rf /var/www/html/*
                sudo cp -r * /var/www/html/
 
                sudo systemctl restart apache2
                '''
            }
        }
    }

    post {
        success {
            echo "Deployment Successful ğŸš€"
        }
        failure {
            echo "Deployment Failed âŒ"
        }
    }
}
 
